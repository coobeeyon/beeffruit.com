---
const nav = [
  { href: '/', text: 'Home' },
  { href: '/articles', text: 'Articles' },
  { href: '/quizzes', text: 'Quizzes' }
];
---
<header class="sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-black/40">
  <div class="mx-auto max-w-screen-xl px-4">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center gap-2 font-extrabold text-xl">
        <span class="text-brand-yellow">Beef</span><span class="text-brand-pink">Fruit</span>
      </a>
      <nav class="hidden md:flex items-center gap-6">
        {nav.map((i) => (
          <a class="text-sm text-gray-300 hover:text-white" href={i.href}>{i.text}</a>
        ))}
      </nav>
      <a href="#main" class="md:hidden text-xs text-gray-400 focus-visible:outline-none">Skip</a>
    </div>
  </div>
</header>

