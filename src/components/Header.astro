---
const nav = [
  { href: '/', text: 'Home' },
  { href: '/articles', text: 'Articles' },
  { href: '/quizzes', text: 'Quizzes' }
];
---
<header class="sticky top-0 z-50 bg-surface-white/95 backdrop-blur border-b border-ink-200">
  <div class="mx-auto max-w-7xl px-4">
    <div class="flex h-14 items-center justify-between">
      <a href="/" class="flex items-center">
        <img 
          src="/beefruit-logo.png" 
          alt="BeefFruit" 
          class="h-10 w-auto object-contain"
        />
      </a>
      <nav class="hidden md:flex items-center gap-8">
        {nav.map((i) => (
          <a class="text-sm font-medium text-ink-600 hover:text-ink-950 transition-colors" href={i.href}>{i.text}</a>
        ))}
      </nav>
      <a href="#main" class="md:hidden text-xs text-ink-400 focus-visible:outline-none">Skip</a>
    </div>
  </div>
</header>

